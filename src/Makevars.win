PKG_CPPFLAGS= -I../windows/libpq-9.4.0/include
PKG_LIBS= -L../windows/libpq-9.4.0/lib${R_ARCH} PKG_LIBS= -lpq -lssl -lcrypto -lwsock32 -lsecur32 -lws2_32 -lgdi32 -lcrypt32 -lwldap32

SOURCES = $(wildcard *.c)

OBJECTS = $(SOURCES:.c=.o)

all: clean winlibs $(OBJECTS)

clean:
	rm -f $(OBJECTS)

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R"
